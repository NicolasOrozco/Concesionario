<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefWidth="1000.0" prefHeight="600.0" style="-fx-background-color: #181818;" fx:controller="co.edu.uniquindio.poo.viewController.ComprarVehiculoViewController">
    <children>
        <ScrollPane layoutX="0.0" layoutY="0.0" prefWidth="1000.0" prefHeight="600.0" style="-fx-background-color: #181818;">
            <content>
                <VBox spacing="20.0" alignment="TOP_CENTER" style="-fx-background-color: #181818;" prefWidth="1000.0">
                    <!-- Título -->
                    <Label text="Comprar Vehículo" textFill="white" alignment="CENTER" VBox.margin="20.0">
                        <font>
                            <Font name="Arial Bold" size="24.0" />
                        </font>
                    </Label>

                    <!-- ComboBox para seleccionar el tipo de vehículo -->
                    <HBox alignment="CENTER" spacing="10.0">
                        <Label text="Seleccione el tipo de vehículo:" textFill="white">
                            <font>
                                <Font name="Arial" size="16.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="comboTipoVehiculo" promptText="Seleccione un tipo" />
                    </HBox>

                    <!-- Panel dinámico para los atributos -->
                    <VBox fx:id="panelAtributos" spacing="10.0" alignment="TOP_CENTER">
                        <!-- Aquí se cargarán dinámicamente los campos según el tipo de vehículo -->
                    </VBox>

                    <!-- Botón de confirmación -->
                    <Button text="Confirmar" fx:id="btnConfirmar" prefWidth="150.0" style="-fx-background-color: #007acc; -fx-text-fill: white; -fx-font-size: 14px;">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>